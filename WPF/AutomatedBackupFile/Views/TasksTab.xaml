<UserControl x:Class="AutomatedBackupFile.Views.TasksTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="950">
    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="Current Backup Operations" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Start Backup Now" Margin="0,0,5,0"/>
                        <Button Content="Stop Backup" Margin="0,0,5,0"/>
                        <Button Content="View History"/>
                    </StackPanel>
                    <ProgressBar Height="20" Value="0" Margin="0,0,0,10"/>
                    <Label Content="Status: Idle"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Pending Tasks (Todo List)" Margin="0,0,0,10">
                <ListBox Height="80"/>
            </GroupBox>
            <GroupBox Header="Backup Log">
                <TextBox Height="80" IsReadOnly="True" TextWrapping="Wrap"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>