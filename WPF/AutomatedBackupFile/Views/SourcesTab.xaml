<UserControl x:Class="AutomatedBackupFile.Views.SourcesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="950">
    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="Source Locations" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Add Local Folder" Margin="0,0,5,0"/>
                        <Button Content="Add Network Path" Margin="0,0,5,0"/>
                        <Button Content="Add Cloud Path" Margin="0,0,5,0"/>
                        <Button Content="Edit" Margin="0,0,5,0"/>
                        <Button Content="Remove" Margin="0,0,5,0"/>
                        <Button Content="Test Connection"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="False" Height="150" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type"/>
                            <DataGridTextColumn Header="Path/URL"/>
                            <DataGridTextColumn Header="Username"/>
                            <DataGridTextColumn Header="Status"/>
                            <DataGridTextColumn Header="Files"/>
                            <DataGridTextColumn Header="Size"/>
                            <DataGridTextColumn Header="Last Checked"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Change Detection Settings">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Check Interval:" VerticalAlignment="Center"/>
                        <TextBox Width="50" Text="60" Margin="5,0,0,0"/>
                        <Label Content="minutes" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                    <CheckBox Content="Monitor for Changes" Margin="0,0,0,10"/>
                    <Label Content="Monitoring: Inactive | Files: 0 | Size: 0 bytes | Changes: 0" Background="#f0f0f0" BorderBrush="#ccc" BorderThickness="1" Padding="5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="View Change History" Margin="0,0,5,0"/>
                        <Button Content="Scan Now"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>