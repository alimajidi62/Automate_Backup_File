<UserControl x:Class="AutomatedBackupFile.Views.DestinationTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="950">
    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="Backup Destinations" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Add Local Destination" Margin="0,0,5,0"/>
                        <Button Content="Add Cloud Destination" Margin="0,0,5,0"/>
                        <Button Content="Remove"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="False" Height="120">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type"/>
                            <DataGridTextColumn Header="Path/URL"/>
                            <DataGridTextColumn Header="Free Space"/>
                            <DataGridTextColumn Header="Status"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Retention Policy" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Keep backups for:" VerticalAlignment="Center"/>
                    <TextBox Width="50" Text="30" Margin="5,0,0,0"/>
                    <Label Content="days" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Content="Auto-cleanup old backups" Margin="10,0,0,0"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="File Monitoring">
                <StackPanel>
                    <Label Content="Monitoring: Inactive | Backup Files: 0 | Size: 0 bytes | Changes: 0" Background="#f0f0f0" BorderBrush="#ccc" BorderThickness="1" Padding="5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox Content="Enable Backup File Monitoring" Margin="0,0,5,0"/>
                        <Button Content="View Change History" Margin="0,0,5,0"/>
                        <Button Content="Scan Now"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>